model User {
  id             String   @id @default(uuid())
  name           String
  email          String
  cpf            String
  phone          String
  birthDate      DateTime
  nationality    String
  monthly_income Float
  occupation     String
  pep            Boolean?
  password       String

  confirmed Boolean? @default(false)

  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("users")
}
